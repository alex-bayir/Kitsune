<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2.0dip"
        android:layout_margin="2.0dip">
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <org.alex.kitsune.commons.AspectRatioImageView
                        android:id="@+id/cover"
                        android:layout_width="100sp"
                        android:layout_height="160sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_caution"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                />
                <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/title_short"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:textAlignment="center"
                        android:padding="4dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/manga_info_gradient"
                        android:layout_alignStart="@id/cover"
                        android:layout_alignBottom="@id/cover"
                        android:layout_alignEnd="@+id/cover"
                />
                <com.google.android.material.textview.MaterialTextView
                          android:id="@+id/num_saved"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="bottom"
                          android:paddingStart="3dp"
                          android:paddingEnd="3dp"
                          android:paddingBottom="1dp"
                          android:maxLines="1"
                          android:textSize="12sp"
                          android:textColor="@android:color/white"
                          android:backgroundTint="@color/num_saved"
                          android:background="@drawable/bg_new"
                          android:layout_alignStart="@id/cover"
                          android:layout_alignTop="@id/cover"
                />
                <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/num_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:paddingBottom="1dp"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/num_new"
                        android:background="@drawable/bg_new"
                        android:layout_alignEnd="@id/cover"
                        android:layout_alignTop="@id/cover"
                />
                <RelativeLayout android:id="@+id/full"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/cover"
                                android:layout_alignParentEnd="true"
                                android:layout_alignBottom="@id/cover"
                                android:layout_toEndOf="@+id/cover">

                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:orientation="vertical"
                                      android:gravity="center_vertical"
                                      android:padding="8sp"
                                      android:layout_alignParentTop="true"
                                      android:layout_alignParentStart="true"
                                      android:layout_alignParentEnd="true"
                                      android:layout_above="@+id/line">
                                <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:textSize="20sp"
                                        style="?android:textAppearance"
                                />
                                <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/subtitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_marginTop="4sp"
                                        style="?android:textAppearance"
                                />
                                <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/genres"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_marginTop="4sp"
                                        style="?android:textAppearance"
                                />

                        </LinearLayout>
                        <ImageView android:id="@+id/mark_new"
                                   android:layout_width="48sp"
                                   android:layout_height="48sp"
                                   android:src="@drawable/mark_new"
                                   android:layout_alignParentEnd="true"
                                   android:layout_alignParentTop="true"/>
                        <ImageView
                                android:id="@+id/line"
                                android:background="@color/colorLine"
                                android:layout_width="match_parent"
                                android:layout_height="1.0dip"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_above="@+id/button_continue"
                        />
                        <com.alex.ratingbar.RatingBar
                                android:id="@+id/ratingBar"
                                android:padding="4sp"
                                android:layout_width="100sp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_alignParentStart="true"
                                android:layout_alignTop="@+id/button_continue"
                                android:layout_alignBottom="@+id/button_continue"
                        />
                        <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/images_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:gravity="center"
                                android:padding="8.0dip"
                                android:layout_alignTop="@+id/button_continue"
                                android:layout_toStartOf="@+id/button_continue"
                                android:layout_toEndOf="@+id/ratingBar"
                                android:layout_alignParentBottom="true"
                                style="?android:textAppearance"
                        />

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_continue"
                                android:layout_width="wrap_content"
                                android:layout_height="48sp"
                                android:text="@string/CONTINUE"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                        />
                </RelativeLayout>
        </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
