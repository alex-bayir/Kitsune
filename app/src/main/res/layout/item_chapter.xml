<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="?android:listPreferredItemHeight"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/highlight_selected">
    <TextView android:id="@+id/chapter_title"
              android:layout_width="0.0dip"
              android:layout_height="wrap_content"
              android:layout_marginTop="6.0dip"
              android:ellipsize="end"
              android:maxLines="1"
              android:layout_marginStart="16.0dip"
              app:layout_constraintEnd_toStartOf="@id/chapter_play"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              style="?android:textAppearance"
    />
    <TextView android:id="@+id/chapter_subtitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:maxLines="1"
              android:layout_marginStart="16.0dip"
              app:layout_constraintBottom_toTopOf="@id/chapter_date"
              app:layout_constraintEnd_toStartOf="@id/chapter_play"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/chapter_title"
              style="?android:textAppearance"
    />
    <TextView android:id="@+id/chapter_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="6.0dip"
              android:ellipsize="end"
              android:maxLines="1"
              android:layout_marginStart="16.0dip"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              style="?android:textAppearance"
    />
    <TextView android:id="@+id/middle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="6.0dip"
              android:ellipsize="end"
              android:maxLines="1"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              style="?android:textAppearance"
    />
    <TextView android:id="@+id/download_text"
              android:textSize="12sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="6.0dip"
              android:text="@string/downloaded"
              android:textAllCaps="true"
              android:ellipsize="end"
              android:maxLines="1"
              android:layout_marginEnd="16.0dip"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              style="?android:textAppearance"
    />
    <ImageView android:id="@+id/mark_new"
               android:layout_width="48dp"
               android:layout_height="48dp"
               android:src="@drawable/mark_new"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"/>
    <ImageView android:id="@+id/chapter_play"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               android:layout_marginEnd="16dp"
               android:src="@drawable/ic_play_green"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent" />
    <ImageView android:id="@+id/chapter_close"
               android:layout_width="16dp"
               android:layout_height="16dp"
               android:layout_marginBottom="6dp"
               android:layout_marginEnd="16dp"
               android:src="@drawable/ic_lock"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>