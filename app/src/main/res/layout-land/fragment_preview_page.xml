<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backdrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:alpha="0.25"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <View android:background="@drawable/manga_info_gradient"
          android:layout_width="match_parent"
          android:layout_height="88.0dip"
          app:layout_constraintBottom_toBottomOf="@id/backdrop"
          android:id="@+id/view"/>
    <com.google.android.material.card.MaterialCardView
            android:id="@+id/cover_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="2.0dip"
            app:layout_constraintDimensionRatio="h,3:2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cover"
                android:scaleType="center"
                android:src="@drawable/ic_caution"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toEndOf="@+id/cover_card"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/cover_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom">
                <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/ratingBar"
                        android:layout_alignParentStart="true"
                        style="?android:textAppearance"/>
                <com.alex.ratingbar.RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/button_favourite"
                        android:layout_centerVertical="true"/>
                <Button android:id="@+id/button_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/read"
                        android:layout_alignParentEnd="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_centerVertical="true"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/button_favourite"
                        android:tint="?android:colorPrimary"
                        android:background="?selectableItemBackgroundBorderless"
                        android:padding="12.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_tag_heart_outline_white_24dp"
                        android:layout_toStartOf="@id/button_read"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
            <com.alex.listitemview.ListItemView
                    android:id="@+id/average_read_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/genres"
                    app:liv_displayMode="icon"
                    app:liv_icon="@drawable/ic_fast_clock"
                    app:liv_multiline="true"
                    app:liv_subtitle="@string/calculating"
                    app:liv_title="@string/estimated_time"/>
            <com.alex.listitemview.ListItemView
                    android:id="@+id/genres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:liv_displayMode="icon"
                    app:liv_icon="@drawable/ic_shape_black_24dp"
                    app:liv_multiline="true"
                    app:liv_title="@string/genres"
            />
            <com.alex.listitemview.ListItemView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:liv_displayMode="icon"
                    app:liv_icon="@drawable/ic_info"
                    app:liv_multiline="true"
                    app:liv_subtitle="@string/loading"
                    app:liv_title="@string/description"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_list"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


